{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    

    "types": ["node", "express", "jest"],

    "isolatedModules": false,
    "verbatimModuleSyntax": false
  },
  "exclude": [
     "__mocks__",
    "**/__tests__",
    "coverage",
    "jest.config.js",
    "node_modules",
    "dist"
  ]
}
